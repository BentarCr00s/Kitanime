            else
              div(class="pt-4")
                button(onclick="history.back()" class="inline-flex items-center space-x-2 text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 dark:hover:text-indigo-300 font-medium text-lg transition-colors duration-300")
                  svg(class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                    path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18")
                  span Kembali ke Halaman Sebelumnya

        // Debug Information Section
        div(class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-3xl shadow-xl p-8 border border-white/30 dark:border-gray-600/40 transition-all duration-500 hover:shadow-2xl")
          details(class="group")
            summary(class="cursor-pointer text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4 flex items-center hover:text-red-600 dark:hover:text-red-400 transition-colors duration-300")
              svg(class="w-6 h-6 mr-3 group-open:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7")
              span Informasi Debug
            div(class="text-sm text-gray-600 dark:text-gray-300 space-y-2")
              if error && error.status
                div(class="flex items-center space-x-2")
                  span(class="font-medium") Status:
                  span(class="px-2 py-1 bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-200 rounded-lg text-xs")= error.status
              if error && error.message
                div(class="flex items-start space-x-2")
                  span(class="font-medium mt-1") Message:
                  span(class="px-3 py-2 bg-gray-100 dark:bg-gray-700/50 text-gray-700 dark:text-gray-300 rounded-lg text-xs flex-1")= error.message
              div(class="flex items-center space-x-2")
                span(class="font-medium") Timestamp:
                span(class="px-2 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 rounded-lg text-xs")= new Date().toLocaleString('id-ID')

  // Scroll to Top Button
  button(id="scrollToTop" class="fixed bottom-8 right-8 bg-gradient-to-r from-red-500 to-pink-600 hover:from-red-600 hover:to-pink-700 text-white p-4 rounded-full shadow-2xl hover:shadow-red-500/25 transition-all duration-300 hover:scale-110 opacity-0 invisible z-50")
