extends layout

block content
  // Modern Genres Header
  section(class="bg-gradient-to-r from-dark-900 via-dark-800 to-dark-900 py-16 relative overflow-hidden")
    div(class="container mx-auto px-6 relative z-10")
      div(class="text-center")
        div(class="inline-flex items-center px-4 py-2 bg-purple-600/20 text-purple-400 rounded-full text-sm font-medium mb-6 border border-purple-600/30")
          svg(class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
          span Kategori Anime
        h1(class="text-4xl md:text-6xl font-black text-white mb-4")
          span(class="gradient-text") Genre Anime
        p(class="text-xl text-gray-300 max-w-2xl mx-auto leading-relaxed") Jelajahi berbagai genre anime sesuai selera Anda

  // Main Content
  div(class="container mx-auto px-6 py-12")
    div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-6")
      - var genres = ['Action', 'Adventure', 'Comedy', 'Drama', 'Fantasy', 'Romance', 'Sci-Fi', 'Slice of Life', 'Horror', 'Mystery', 'Sports', 'Music']
      each genre in genres
        a(href=`/genres/${genre.toLowerCase()}` class="genre-card group bg-dark-800/50 backdrop-blur-lg rounded-2xl p-6 border border-dark-700/30 hover:border-primary-600/30 transition-all duration-300 hover:scale-105 shadow-2xl")
          div(class="text-center")
            div(class="w-16 h-16 bg-gradient-to-br from-primary-500 to-accent-500 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform")
              svg(class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
            h3(class="text-white font-bold text-lg mb-2 group-hover:text-primary-400 transition-colors")= genre
            - var genreIndex = ['Action', 'Adventure', 'Comedy', 'Drama', 'Fantasy', 'Romance', 'Sci-Fi', 'Slice of Life', 'Horror', 'Mystery', 'Sports', 'Music'].indexOf(genre)
            p(class="text-gray-400 text-sm")= `${(genreIndex + 1) * 25 + 30} anime`

block scripts
  script.
    // Add stagger animation to genre cards
    const genreCards = document.querySelectorAll('.genre-card');
    genreCards.forEach((card, index) => {
      card.style.animationDelay = `${index * 0.1}s`;
      card.classList.add('animate-slide-up');
    });