extends layout

block content
  // Genre Hero Section
  section(class="bg-gradient-to-r from-dark-900 via-dark-800 to-dark-900 py-16 relative overflow-hidden")
    div(class="container mx-auto px-6 relative z-10")
      div(class="text-center")
        div(class="inline-flex items-center px-4 py-2 bg-purple-600/20 text-purple-400 rounded-full text-sm font-medium mb-6 border border-purple-600/30")
          svg(class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
          span Genre Anime
        h1(class="text-4xl md:text-6xl font-black text-white mb-4")
          span Genre: 
          span(class="gradient-text")= genreName || 'Unknown'
        p(class="text-xl text-gray-300 max-w-2xl mx-auto leading-relaxed") Koleksi anime terbaik dalam genre ini

  // Main Content
  div(class="container mx-auto px-6 py-12")
    div(class="grid grid-cols-1 xl:grid-cols-4 gap-12")
      div(class="xl:col-span-3")
        if animeList && animeList.length > 0
          // Results Header
          div(class="flex items-center justify-between mb-8")
            div(class="flex items-center space-x-4")
              div(class="w-1 h-8 bg-gradient-to-b from-purple-500 to-purple-600 rounded-full")
              h2(class="text-3xl font-bold text-white") Daftar Anime
              div(class="px-4 py-2 bg-purple-600/20 text-purple-400 rounded-full text-sm font-medium border border-purple-600/30")= `${animeList.length} anime`
          
          // Anime Grid
          div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6 mb-12")
            each anime in animeList
              div(class="anime-card group cursor-pointer rounded-2xl overflow-hidden animate-slide-up")
                a(href=`/anime/${anime.slug}` class="block")
                  div(class="relative overflow-hidden")
                    img(src=anime.poster alt=anime.title class="anime-poster w-full h-64 sm:h-72 object-cover transition-transform duration-500" onerror="this.onerror=null;this.src='https://placehold.co/400x600?text=No+Image';")
                    
                    // Overlay Gradient
                    div(class="absolute inset-0 bg-gradient-to-t from-dark-900/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300")
                    
                    // Status Badges
                    div(class="absolute top-3 left-3")
                      if anime.status
                        div(class="px-3 py-1 bg-primary-600 text-white text-xs font-medium rounded-full shadow-lg backdrop-blur-sm")= anime.status
                    
                    if anime.rating
                      div(class="absolute top-3 right-3 px-3 py-1 bg-dark-800/80 backdrop-blur-sm text-white text-xs rounded-full border border-dark-700/50 flex items-center")
                        svg(class="w-3 h-3 mr-1 text-yellow-400" fill="currentColor" viewBox="0 0 20 20")
                          path(d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z")
                        span= anime.rating
                    
                    // Play Button Overlay
                    div(class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300")
                      div(class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center border border-white/30 group-hover:scale-110 transition-transform")
                        svg(class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24")
                          path(d="M8 5v14l11-7z")
                  
                  div(class="p-4 bg-dark-800/50 backdrop-blur-sm")
                    h3(class="font-semibold text-white text-sm leading-tight mb-2 line-clamp-2 group-hover:text-purple-400 transition-colors")= anime.title
                    if anime.genres && anime.genres.length > 0
                      div(class="flex flex-wrap gap-1 mt-2")
                        each genre in anime.genres.slice(0, 2)
                          span(class="px-2 py-1 bg-dark-700/50 text-gray-400 text-xs rounded-full border border-dark-600/30")= genre

          // Pagination
          if pagination && pagination.last_visible_page > 0
            nav(class="flex justify-center")
              div(class="flex items-center space-x-2")
                if pagination.current_page > 1
                  a(href=`/genres/${genreName.toLowerCase()}?page=${pagination.current_page - 1}` class="px-4 py-3 bg-dark-800/50 text-gray-300 rounded-xl hover:bg-dark-700/50 hover:text-white transition-all border border-dark-700/30 flex items-center")
                    svg(class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                      path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7")
                    span Sebelumnya
                
                each page in Array.from({length: Math.min(5, pagination.last_visible_page)}, (_, i) => {const start = Math.max(1, pagination.current_page - 2);return start + i;}).filter(p => p <= pagination.last_visible_page)
                  if page === pagination.current_page
                    span(class="px-4 py-3 bg-purple-600 text-white rounded-xl font-semibold shadow-lg")= page
                  else
                    a(href=`/genres/${genreName.toLowerCase()}?page=${page}` class="px-4 py-3 bg-dark-800/50 text-gray-300 rounded-xl hover:bg-dark-700/50 hover:text-white transition-all border border-dark-700/30")= page
                
                if pagination.current_page < pagination.last_visible_page
                  a(href=`/genres/${genreName.toLowerCase()}?page=${pagination.current_page + 1}` class="px-4 py-3 bg-dark-800/50 text-gray-300 rounded-xl hover:bg-dark-700/50 hover:text-white transition-all border border-dark-700/30 flex items-center")
                    span Selanjutnya
                    svg(class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                      path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7")
        else
          // Empty State
          div(class="text-center py-20")
            div(class="w-24 h-24 bg-dark-800/50 rounded-full flex items-center justify-center mx-auto mb-6")
              svg(class="w-12 h-12 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
            h3(class="text-2xl font-bold text-white mb-4") Tidak Ada Anime
            p(class="text-gray-400 text-lg max-w-md mx-auto") Belum ada anime dalam genre ini. Silakan kembali lagi nanti.

      // Sidebar
      div(class="xl:col-span-1 space-y-8")
        // Related Genres
        div(class="bg-dark-800/50 backdrop-blur-lg rounded-2xl p-6 border border-dark-700/30 shadow-2xl")
          div(class="flex items-center space-x-3 mb-6")
            div(class="w-8 h-8 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center")
              svg(class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
            h3(class="text-xl font-bold text-white") Genre Serupa
          div(class="space-y-2")
            - var genres = ['Action', 'Adventure', 'Comedy', 'Drama', 'Fantasy', 'Romance']
            each genre in genres
              if genreName && genre.toLowerCase() !== genreName.toLowerCase()
                a(href=`/genres/${genre.toLowerCase()}` class="block p-3 bg-dark-700/30 rounded-lg border border-dark-600/30 hover:bg-purple-600/20 hover:border-purple-600/30 transition-all")
                  span(class="text-gray-300 hover:text-purple-400 transition-colors")= genre

block scripts
  script.
    // Add stagger animation to anime cards
    const animeCards = document.querySelectorAll('.anime-card');
    animeCards.forEach((card, index) => {
      card.style.animationDelay = `${index * 0.1}s`;
    });