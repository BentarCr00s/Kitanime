extends layout

block content
  div(class="container mx-auto px-6 py-8")
    div(class="grid grid-cols-1 lg:grid-cols-4 gap-8")
      div(class="lg:col-span-3")
        // Breadcrumb Navigation
        nav(class="mb-8")
          ol(class="flex items-center space-x-3 text-sm")
            li: a(href="/" class="text-gray-500 dark:text-gray-400 hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors duration-200 flex items-center") 
              svg(class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6")
              span Beranda
            li: span(class="text-gray-400 dark:text-gray-500") /
            li: a(href=`/anime/${anime.slug}` class="text-gray-500 dark:text-gray-400 hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors duration-200")= anime.title
            li: span(class="text-gray-400 dark:text-gray-500") /
            li(class="text-indigo-600 dark:text-indigo-400 font-semibold") Episode #{episode.number}

        // Video Player Section
        div(class="relative bg-gradient-to-br from-gray-900 to-black rounded-3xl overflow-hidden shadow-2xl mb-8 group transition-all duration-500 hover:shadow-3xl")
          div(id="playerLoading" class="absolute inset-0 bg-black bg-opacity-75 flex items-center justify-center z-20 transition-opacity duration-300")
            div(class="text-center text-white")
              div(class="animate-spin rounded-full h-16 w-16 border-b-4 border-indigo-500 mx-auto mb-6")
              p(class="text-xl font-bold mb-2") Memuat Video...
              p(class="text-lg text-gray-300") Mohon tunggu sebentar

          div(class="h-full")
            video(
              id="player"
              class="aspect-video w-full h-full"
              preload="metadata"
              poster='/stream?url='+anime.poster
              crossorigin="anonymous"
              playsinline
              allow="autoplay"
              data-plyr-config='{"autoplay": false, "muted": true}'
            )
              if episode.video_sources
                if Array.isArray(episode.video_sources)
                  each source in episode.video_sources
                    source(src=source.url || source type=source.type || "video/mp4")
                else
                  each source in episode.qlist
                    source(src=episode.quality[source] type="video/mp4" size=source)
              
              p(class="text-white text-center p-4") Browser Anda tidak mendukung video player.

          div(class="absolute top-0 left-0 right-0 bg-gradient-to-t from-transparent via-black/50 to-black p-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300")
            div(class="flex items-center justify-between text-white")
              div(class="flex items-center space-x-4")
                h2(class="text-xl font-bold")= anime.title
                span(class="text-sm bg-indigo-600 px-3 py-1 rounded-full font-medium") Episode #{episode.number}
              div(class="flex items-center space-x-3")
                button(id="qualityBtn" class="bg-black/50 hover:bg-black/70 px-4 py-2 rounded-xl text-sm transition-all duration-200 hover:scale-105") Auto
                button(id="speedBtn" class="bg-black/50 hover:bg-black/70 px-4 py-2 rounded-xl text-sm transition-all duration-200 hover:scale-105") 1x

        // Auto Next Episode Toggle
        div(class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-3xl shadow-xl p-6 mb-8 border border-white/20 dark:border-gray-700/30 transition-all duration-500 hover:shadow-2xl")
          div(class="flex items-center justify-between")
            div(class="flex items-center space-x-4")
              div(class="p-3 bg-indigo-100 dark:bg-indigo-900/30 rounded-2xl transition-colors duration-300")
                svg(class="w-6 h-6 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7")
              div
