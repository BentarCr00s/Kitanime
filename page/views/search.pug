              div(class="relative flex bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl border-2 border-gray-200 dark:border-gray-600 hover:border-pink-300 dark:hover:border-pink-500 transition-all duration-300 overflow-hidden shadow-lg hover:shadow-xl")
                input(
                  type="text"
                  name="q"
                  placeholder="Masukkan judul anime yang ingin dicari..."
                  value=keyword || ""
                  class="flex-1 px-6 py-4 bg-transparent text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none text-lg"
                  required
                )
                button(
                  type="submit"
                  class="px-8 py-4 bg-gradient-to-r from-pink-500 to-rose-600 hover:from-pink-600 hover:to-rose-700 text-white font-semibold transition-all duration-300 hover:scale-105 flex items-center space-x-2"
                )
                  svg(class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                    path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z")
                  span Cari

        if keyword && searchResults
          if searchResults.length > 0
            div(class="mb-8")
              div(class="flex items-center space-x-3 mb-6")
                div(class="w-1 h-8 bg-gradient-to-b from-pink-500 to-rose-600 rounded-full")
                h2(class="text-2xl font-bold text-gray-900 dark:text-gray-100") Hasil Pencarian
                span(class="bg-pink-100 dark:bg-pink-900/30 text-pink-800 dark:text-pink-200 px-3 py-1 rounded-full text-sm font-medium")= searchResults.length + ' hasil'
              
              p(class="text-gray-600 dark:text-gray-300 mb-6") Ditemukan #{searchResults.length} hasil untuk "#{keyword}"
              
              div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6 anime-grid")
                each anime in searchResults
                  div(class="anime-card group relative")
                    a(href=`/anime/${anime.slug}`)
